<html lang="zh">
    <head>
        <meta charset="utf-8"/>
        <meta http-equiv="x-ua-compatible" content="ie=edge"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <link rel="stylesheet" href="/static/css/md-default.css"/>
        <link rel="stylesheet" href="/static/css/base.css"/>
        <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css"/>
        <script type="javascript" src="/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
        <title>{{ title }} - {{ projectConfig.projectName }}</title>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">{{ projectConfig.projectName }}</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarnav" aria-controls="navbarnav" aria-expanded="false" aria-label="toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarnav">
                    <ul class="navbar-nav">
                        {% for menu in menus %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ menu.url }}">{{ menu.name }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container" style="margin-top: 20px">
            <h1>文档列表</h1>
            <hr>
            <div class="list-group">
                {%- for page in collections.static -%}
                <a href="{{page.url}}" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{ page.data.title }}</h5>
                        <small class="text-muted">{{ page.data.date | dateFilter }}</small>
                    </div>
                    <p class="mb-1">{{ page.data.description }}</p>
                </a>
                {%- endfor -%}
            </div>
        </div>

        <div>
            {{ content | safe }}
        </div>
    </body>
</html>